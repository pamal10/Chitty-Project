<div class="container">
   
    <div>
        <h4 class="mt-4"><strong>{{details.name}}</strong></h4>
    </div>

    <table  class="table table-dark table-striped mt-5">
        <thead>
            <tr>
                <th scope="col">Chitty Number</th>
                <th scope="col">Chittaal Number</th>
                <th scope="col">Monthly Installment</th>
                <th scope="col">Number Of Months</th>
                <th scope="col">Sala</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{details.ChittyNumber}}</td>
                <td>{{details.chittaalNumber}}</td>
                <td>Rs {{MonthlyInstallment}}</td>
                <td>{{NumberOfMonths}}</td>
                <td>Rs {{Sala}}</td>
            </tr>
        </tbody>

    </table>
</div>
<div class="mt-4" >
    <table id="install" class="table">
  <thead class="thead-dark">
    
    <tr>
      <th scope="col">Installment</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment Status</th>
      <th scope="col">Due Date</th>
      
    </tr>
  </thead>
     

  <tbody>
    {{#each detail}}
   
    <tr>
      <th scope="row">{{this.Installment}}</th>
      <td>Rs {{this.Amount}}</td>
      
      {{#ifEquals  this.PaymentStatus "Pending"}}
      
      <td><a class="btn text-danger" onclick="return confirm('Changing the Payment Status to Paid')" href="/admin/changePaymentstatus?id={{this._id}}">{{this.PaymentStatus}}</a></td>
        {{/ifEquals}}
        {{#ifEquals this.PaymentStatus "Paid"}}
      <td> <a class="btn text-success" onclick="return confirm('Changing the Payment Status to Pending')" href="/admin/changePaystatus?id={{this._id}}">{{this.PaymentStatus}}</a></td>
     {{/ifEquals}}
      
      <td>{{this.Date}} {{this.Month}} {{this.Year}}</td>
     
      
    </tr>
     {{/each}}
    
    
   
  </tbody>
    
</table>
</div>

<script>
  $(function () {
    $('#install').DataTable({
      "order": [[0, "asc"]]
    });
  });

</script>