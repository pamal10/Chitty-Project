<div class="conatainer">
    <form class="mt-5" action="/admin/addClient?id={{chittyNo}}" method="POST">
        <div class="form-group row">
            <label for="chittaalNumber" class="col-sm-2 col-form-label">Chittaal Number</label>
            {{#if next}}
            <div class="col-sm-10">
                <input type="number" class="form-control w-50" value="{{nextMan}}" name="chittaalNumber" id="chittaalNumber" placeholder="">
            </div>
            {{else}}
            <div class="col-sm-10">
                <input type="number" class="form-control w-50" value="1" name="chittaalNumber" id="chittaalNumber" placeholder="">
            </div>
            {{/if}}
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-50" name="name" id="name" placeholder="">
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary ml-5">ADD</button>
            </div>
        </div>
    </form>
</div>