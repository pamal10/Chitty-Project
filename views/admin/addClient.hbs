<section>
    <div class="conatainer">
        <div class="row">
            <div class="col-md-4"></div>
            <form class="mt-5 col-md-6" action="/admin/addClient?id={{chittyNo}}" method="POST">
                <div class="form-group ">
                    <label for="chittaalNumber" class=" col-form-label">Chittaal Number</label>
                    {{#if next}}
                    <div class="">
                        <input type="number" class="form-control w-50" value="{{nextMan}}" name="chittaalNumber"
