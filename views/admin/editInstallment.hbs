<div class="conatainer">
    <form class="mt-5" action="/admin/editInstall?id={{lastInstall.ChittyNumber}}" method="POST"> 
        <div class="form-group row">
            <label for="installment"  class="col-sm-2 col-form-label">Installment</label>
            <div class="col-sm-10">
                <input type="number" value="{{lastInstall.Installment}}" class="form-control w-50" name="Installment" id="installment" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control w-50" value="{{lastInstall.Amount}}" name="Amount" id="amount" placeholder="">
            </div>
        </div>
         <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Month</label>
            <div class="col-sm-10">
                
                <select name="Month" id="month">
                    <option >{{lastInstall.Month}}</option>
                    <option >January</option>
                    <option >February</option>
                    <option >March</option>
                    <option >April</option>
                    <option >May</option>
                    <option >June</option>
                    <option >July</option>
                    <option >August</option>
                    <option >September</option>
                    <option >October</option>
                    <option >November</option>
                    <option >December</option>
                </select>
            </div>
        </div>
         <div class="form-group row">
            <label for="year" class="col-sm-2 col-form-label">Year</label>
            <div class="col-sm-10">
                
                <select name="Year" id="month">
                    <option >{{lastInstall.Year}}</option>
                    <option >2021</option>
                    <option >2022</option>
                    <option >2023</option>
                    <option >2024</option>
                    <option >2025</option>
                    <option >2026</option>
                    <option >2027</option>
                    <option >2028</option>
                    <option >2029</option>
                    <option >2030</option>
                    <option >2031</option>
                    <option >2032</option>
                </select>
            </div>
        </div>
     
     
       
        <div class="form-group row">
           <div class="col-sm-10">
                <button type="submit" class="btn btn-primary ml-5">EDIT</button>
            </div>
        </div>
      
        <input type="hidden" name="ChittyNumber" id="chittyNumber" value="{{lastInstall.ChittyNumber}}">
       
    </form>
</div>

