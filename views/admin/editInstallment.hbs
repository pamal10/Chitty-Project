<div class="conatainer">
    <form class="mt-5" action="/admin/addInstallment?id={{chittyNo}}" method="POST"> 
        <div class="form-group row">
            <label for="installment"  class="col-sm-2 col-form-label">Installment</label>
            <div class="col-sm-10">
                <input type="number" class="form-control w-50" name="Installment" id="installment" placeholder="">
            </div>
        </div>
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Amount</label>
            <div class="col-sm-10">
                <input type="number" class="form-control w-50" name="Amount" id="amount" placeholder="">
            </div>
        </div>
         <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Month</label>
