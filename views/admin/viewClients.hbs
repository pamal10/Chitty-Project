<div class="container">
    <a href="/admin/addClient?id={{chittyNo}}" class="btn btn-success mt-3">Add Client</a>
</div>


<div class="container">
  <div class="mt-5">
    <table class="table table-bordered table-sm mt-5" id="clients">

      <thead>
        <tr>
          
          <th scope="col">Chittaal Number</th>
          <th scope="col">Name</th>
          <th scope="col">Priced/Non-Priced</th>
          <th scope="col">Options</th>

         
        </tr>
      </thead>
      <tbody>
        {{#each details}}

        <tr>

         
         
            <td><a  class="btn text-dark" href="/admin/viewClients?id={{this.ChittyNumber}}">{{this.chittaalNumber}}</a></td>
         
          <td>{{this.name}}</td>
          <td>{{this.pricedStatus}}</td>

          
          <th><a href="/admin/EditClient?id={{this._id}}" class="btn btn-warning">Edit Client<a
                href="/admin/DeleteClienty?id={{this._id}}" class="btn btn-danger ml-1"
                onclick="return confirm('Do you want to delete this Client ?')">Remove Client</a></a>
          </th>

        </tr>

        {{/each}}

      </tbody>
    </table>
  </div>
</div>

<script>
  $(function () {
    $('#clients').DataTable();
  });
</script>