<div class="container">

  <div>
    <h4 class="mt-4" style="font-family: Georgia, 'Times New Roman', Times, serif;color:rgb(197, 166, 119)"><strong>Welcome {{clientDetails.name}} !</strong></h4>
  </div>
<div class="row">
  
<div class="col-md-12">
  <table class="table table-dark table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">Chitty Number</th>
        <th scope="col">Chittaal Number</th>
        <th scope="col">Monthly Installment</th>
        <th scope="col">Number Of Months</th>
        <th scope="col">Sala</th>
        <th scope="col">Prized/Non-Prized</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>{{chitDetails.ChittyNumber}}</td>
        <td>{{clientDetails.chittaalNumber}}</td>
        <td>Rs {{chitDetails.MonthlyInstallment}}</td>
        <td>{{chitDetails.NumberOfMonths}}</td>
        <td>Rs {{chitDetails.Sala}}</td>
        {{#ifEquals clientDetails.PricedStatus "Non-Prized"}}
        <td>{{clientDetails.PricedStatus}}</td>
        {{/ifEquals}}
        {{#ifEquals clientDetails.PricedStatus "Prized"}}
        <td class="text-success">{{clientDetails.PricedStatus}}</td>
        {{/ifEquals}}
      </tr>
    </tbody>

  </table>
  </div>
  <div class="col-xs-5"></div>
</div>


<div class="mt-4">
  
  <table id="install" class="table">
    <thead class="thead-dark">

      <tr>
        <th scope="col">Installment</th>
        <th scope="col">Amount</th>
        <th scope="col">Payment Status</th>
        <th scope="col">Due Date</th>

      </tr>
    </thead>


    <tbody>
      {{#each instdetails}}

      <tr>
        <th scope="row">{{this.Installment}}</th>
        <td>Rs {{this.Amount}}</td>


        {{#ifEquals this.PaymentStatus "Pending"}}

        <td class=" text-danger">{{this.PaymentStatus}}</td>
        {{/ifEquals}}
        {{#ifEquals this.PaymentStatus "Paid"}}
        <td class=" text-success">{{this.PaymentStatus}}</td>
        {{/ifEquals}}

        <td>{{this.Date}} {{this.Month}} {{this.Year}}</td>


      </tr>
      {{/each}}



    </tbody>

  </table>
</div>



<script>
  $(function () {
    $('#install').DataTable({
      "order": [[0, "asc"]],
       "columnDefs": [
        { "targets": [1,2,3], "searchable": false }],
      responsive:true
    });
  });
</script> 